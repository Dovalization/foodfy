{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy - Receitas</title>
{% endblock %}

{% block content %}
    <main>
       <section class="featured-recipes solo">
            <h2>Mais acessadas</h2>
            <div class="cards">
                {% for item in items %}
                <div class="card" id="{{ items.indexOf(item) }}">
                    <div class="card_img_container">
                        <img src="{{item.image}}" alt="Imagem de {{item.title}}">
                    </div>
                    <div class="card_content">
                        <h3>{{item.title}}</h3>
                        <p>{{item.author}}</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </section>
    </main>
{% endblock%}